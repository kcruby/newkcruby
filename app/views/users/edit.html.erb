<div style="min_width:200px;margin:0 20% 20% 20%;">
<h1 style="margin:40px 0 40px 0;text-align:center;">Edit Profile</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :bio %>
          <%= f.text_area :bio %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation %>

          <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>
          <%= gravatar_for @user %>
          <a href="http://gravatar.com/emails">change gravatar</a>
  <% end %>
</div>
