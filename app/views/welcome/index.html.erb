					<% @blogs.order('created_at DESC').take(1).each do |blog| %>
      
        <h1 class="blog-title"><%= blog.title %></h1>
          <h6>
            <%= blog.created_at.strftime("%b %d, %Y") %>

          </h6>       
          <p class="message">
            <%= truncate(blog.message, length: 50, separator: ' ') %> &nbsp; <%= link_to 'Read more', blog_path(blog), method: :get %>
          </p> 
         
          <p>
            <em>written by &nbsp;</em>
